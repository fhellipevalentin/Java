package application;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		System.out.println("Digite três alturas: ");
		for (int i=1; i<=3; i++) {
			double altura = sc.nextDouble();
			if (altura < 1.80) {
				System.out.printf(" Altura %2.f permitida: %n",altura);
			}
			else {
				System.out.printf(" Altura %2.f excede o permitido %n",altura);
			}
		}
		sc.close();

	}

}
